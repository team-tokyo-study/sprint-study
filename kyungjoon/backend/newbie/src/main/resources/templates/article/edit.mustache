{{>layout/header}} {{!layout/header.mustache 적용}}

{{#article}}  {{! 컨트롤러에서 받아온 데이터를 article이란 변수 값으로 받아와 id, title, content값을 출력}}
    <form class="container" action="/article/update" method="post">
        <input name="id" type="hidden" value="{{id}}" />
        <div class="mb-3">
            <label class="form-label">제목</label>
            <input type="text" class="form-control" name="title" value="{{title}}">
        </div>
        <div class="mb-3">
            <label class="form-label">내용</label>
            <textarea class="form-control" rows="3" name="content">{{content}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/article/{{id}}" class="btn btn-primary">Back</a>
    </form>
{{/article}}

